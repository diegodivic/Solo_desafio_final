const db = require("../database");
const { DataTypes } = require('sequelize');

const Itens_pedido = db.define("Itens_pedido", {
    seq: {
        type: DataTypes.INTEGER,
        primaryKey: true,
        autoIncrement: true,
    },
    quantidade:{
        type: DataTypes.INTEGER,
    },
    preco_unitario:{
        type: DataTypes.INTEGER,
    },
    preco_final:{
        type: DataTypes.INTEGER,
    },
    createdAt:{
        type: DataTypes.DATE,
    },
    updatedAt:{
        type: DataTypes.DATE,
    },
},
{
    tableName: "itens_pedido",

});

module.exports = Itens_pedido;